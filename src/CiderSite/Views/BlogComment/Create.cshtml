@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Cider Site - Blog";
}

@model CiderSite.Models.BlogComment
@using CiderSite.Models

<h3>Write something about cider</h3>
<form asp-controller="BlogComment" asp-action="Create" method="post">
    <input type="hidden" value="@ViewBag.BlogId" name="blogId" />
    
    <div class="row">
        <div class="input-field col s10">
            <label for="Body">Enter comment</label>
            <textarea id="Body" class="materialize-textarea" name="Body" required></textarea>
        </div>
    </div>

    <input type="submit" class="waves-effect waves-light btn brown darken-2" value="Add comment" />
</form>