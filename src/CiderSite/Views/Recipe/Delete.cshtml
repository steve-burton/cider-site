@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Cider Site - Delete";
}

@model CiderSite.Models.Recipe

<div class="blog-details">
    <h3>Are you sure you want to delete this recipe?</h3>
    <div class="delete-page">
        <h4>@Html.DisplayFor(model => model.Title)</h4>
        @using (Html.BeginForm())
        {
            <input type="submit" value="Delete" class="waves-effect waves-light btn brown darken-2" />
        }
        <br />
        <div class="read-article">@Html.ActionLink("Return to recipe", "Details", "Recipe", new { id = Model.RecipeId })</div>
    </div>
</div>