@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Cider Site - Recipes";
}

@model CiderSite.Models.Recipe
@using CiderSite.Models

<div class="blog-details">
    <h3>@Html.DisplayFor(model => model.Title)</h3>
    <h5>@Html.DisplayFor(model => model.Author)</h5>
    <p>@Html.DisplayFor(model => model.Ingredients)</p>
    <p>@Html.DisplayFor(model => model.Directions)</p>
    <p>@Html.DisplayFor(model => model.Notes)</p>
</div>

<div><span class="read-article">@Html.ActionLink("Edit recipe", "Edit", "Recipe", new { id = Model.RecipeId })</span> <span class="read-article">@Html.ActionLink("Delete recipe", "Delete", "Recipe", new { id = Model.RecipeId })</span></div>


<p>@Html.ActionLink("Return to recipes", "Index", "Recipe")</p>

@if (Model.RecipeComments.Count() != 0)
{
    <h5>Comments</h5>
    @foreach (var comment in Model.RecipeComments)
    {
        <div class="comment">
            @comment.Body
        </div>
    }
}

