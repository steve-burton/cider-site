@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Cider Site - Recipe";
}

@model CiderSite.Models.RecipeComment
@using CiderSite.Models

<h3>Add a comment about this recipe</h3>
<form asp-controller="RecipeComment" asp-action="Create" method="post">
    <input type="hidden" value="@ViewBag.RecipeId" name="recipeId" />

    <div class="row">
        <div class="input-field col s10">
            <label for="Body">Enter comment</label>
            <textarea id="Body" class="materialize-textarea" name="Body" required></textarea>
        </div>
    </div>

    <input type="submit" class="waves-effect waves-light btn brown darken-2" value="Add comment" />
</form>